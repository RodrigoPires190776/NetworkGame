<Window x:Class="NetworkGameFrontend.VisualData.PlotViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkGameFrontend.VisualData"
        mc:Ignorable="d"
        Title="PlotViewer" Height="475" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid x:Name="PlotGrid" Grid.Row="0">

        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Text="NetworkID:" Margin="20,5,5,5" />
            <TextBlock x:Name="NetworkIDTextBlock" Text="" Margin="85,5,5,5"/>
            <Button x:Name="ResetView" Content="Reset View" Width="100" Height="20" VerticalAlignment="Top" 
                    Click="ResetView_Click" HorizontalAlignment="Right" Margin="5,5,100,5"/>
            <Button x:Name="SavePlotAsImage" Content="Save" Width="60" Height="20" VerticalAlignment="Top" 
                    Click="SavePlotAsImage_Click" HorizontalAlignment="Right" Margin="5,5,20,5"/>
        </Grid>
    </Grid>
</Window>
